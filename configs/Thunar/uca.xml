    <action>
        <icon>utilities-terminal</icon>
        <name>Open Terminal Here</name>
        <unique-id>1643001293691201-1</unique-id>
        <command>wezterm start --cwd %f</command>
        <description>Open Terminal on here directory</description>
        <patterns>*</patterns>
        <startup-notify />
        <directories />
    </action>
    <action>
        <icon>neovim</icon>
        <name>Open with Neovide</name>
        <unique-id>1643001293691201-2</unique-id>
        <command>neovide %f</command>
        <description>Open File/Directory with Neovide</description>
        <patterns>*</patterns>
        <directories />
    </action>

    <action>
        <icon>copy</icon>
        <name>Clip to file</name>
        <unique-id>1643001293691201-3</unique-id>
        <command>~/.config/Thunar/cliptofile %f</command>
        <description>Create file from clipboard</description>
        <patterns>*</patterns>
        <directories />
        <startup-notify />
    </action>
    <action>
        <icon>copy</icon>
        <name>Clip to image</name>
        <unique-id>1643001293691201-4</unique-id>
        <command>~/.config/Thunar/cliptoimg %f</command>
        <description>Create image from clipboard</description>
        <patterns>*</patterns>
        <directories />
        <startup-notify />
    </action>

</actions>
