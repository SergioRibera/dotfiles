# set enviroment vars
exec --no-startup-id export FrameworkPathOverride=/lib/mono/4.7.2-api
#set wallpaper
exec --no-startup-id nitrogen --restore

# Desktop notifications
exec --no-startup-id /usr/bin/dunst

# update notification should be set to tray and notification
#exec --no-startup-id sleep 15 && eos-update-notifier

# set screens
exec --no-startup-id xrandr --output HDMI-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output VGA-1 --mode 1024x768 --pos 1920x0 --rotate normal --output VIRTUAL1 --off
set $firstMonitor HDMI-1
set $secondMonitor VGA-1

# Active Blur
exec --no-startup-id compton --backend glx --blur-method kawase --blur-background --blur-strength 12 --config /dev/null

#set floating (nontiling) for special apps
for_window [class="Xsane" instance="xsane"] floating enable
for_window [class="Pavucontrol" instance="pavucontrol"] floating enable
for_window [class="qt5ct" instance="qt5ct"] floating enable
for_window [class="Bluetooth-sendto" instance="bluetooth-sendto"] floating enable
for_window [class="Pamac-manager"] floating enable


# Set mod key
set $mod Mod4

# Set window title font
font pango:Faira Code

# Align window title
title_align center

# Window rules
for_window [class="^.*"] border pixel 0
for_window [title="Library"] floating enable

# Define gaps between windows
gaps inner 2

# Drag floating windows (Mouse + $mod)
floating_modifier $mod

# Kill focused window
bindsym $mod+w kill

# Open applications
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+p exec scrot -q 100 "%Y-%m-%d-%s-screenshot.png" -e 'mv $f /home/sergioribera/Imágenes/Screenshots/'
bindsym $mod+Shift+l exec scrot --select -q 100 "%Y-%m-%d-%s-screenshot.png" -e 'mv $f /home/sergioribera/Imágenes/Screenshots/'
bindsym $mod+Shift+Tab exec rofi -show run
bindsym $mod+Tab exec rofi -show window

# Change window focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split window in horizontal
bindsym $mod+h split h

# Split window in vertical
bindsym $mod+v split v

# Enter fullscreen mode for the focused window
bindsym $mod+f fullscreen toggle

# Change window layout (Stacked, tabbed or toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# Toggle between tiling and floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling and floating windows
bindsym $mod+space focus mode_toggle

# Set names for workspaces
set $ws1 "I"
set $ws2 "II"
set $ws3 "III"
set $ws4 "IV"
set $ws5 "V"
set $ws6 "VI"
set $ws7 "VII"
set $ws8 "VIII"
set $ws9 "IX"
set $ws0 "X"

# Switch to Principals workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
# Switch to Secondary workspaces
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

# define where is showed in Main Screen
workspace $ws1 output primary
workspace $ws2 output primary
workspace $ws3 output primary
workspace $ws4 output primary
workspace $ws5 output primary
# define where is showed in Main Screen
workspace $ws6 output $secondMonitor
workspace $ws7 output $secondMonitor
workspace $ws8 output $secondMonitor
workspace $ws9 output $secondMonitor
workspace $ws0 output $secondMonitor

# Move focused container to Main workspaces
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
# Move focused container to Secondary workspaces
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 session inplace
bindsym $mod+Shift+r restart

# Resize window
mode "resize" {
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

# Enter resize mode
bindsym $mod+r mode "resize"

# Customize colors
client.focused          #ff79c6 #ff79c6 #282a36 #ff79c6 #ff79c6
client.focused_inactive #282a36 #282a36 #f8f8f2 #282a36 #282a36
client.unfocused        #282a36 #282a36 #f8f8f2 #282a36 #282a36
client.urgent           #ff5555 #ff5555 #282a36 #ff5555 #ff5555
client.placeholder      #282a36 #282a36 #f8f8f2 #282a36 #282a36

# Run commands on startup
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec_always --no-startup-id zsh /home/sergioribera/.config/polybar/launch.sh
